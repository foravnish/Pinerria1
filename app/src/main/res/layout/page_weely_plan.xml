<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="sweet.home.pinerria1.Fragment.SentMgs">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stroke"
        android:foregroundGravity="center"
        android:layout_below="@+id/relat">
        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
        <TextView
            android:id="@+id/leftarrow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:textColor="#111"
            android:layout_marginRight="40dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#111"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/comicz"
            android:layout_toRightOf="@+id/leftarrow"
            android:gravity="center"
            android:text="Days"/>
        <TextView
            android:id="@+id/rightarrow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#111"
            android:background="@drawable/right"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/date"/>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/bnt_Week1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/comicz"
            android:textSize="14dp"
            android:background="@drawable/strock_noti1"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 1"/>

        <TextView
            android:id="@+id/bnt_Week2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/strock_noti2"
            android:fontFamily="@font/comicz"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 2"/>
        <TextView
            android:id="@+id/bnt_Week3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/strock_noti3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/comicz"
            android:gravity="center"
            android:text="Week 3"/>
        <TextView
            android:id="@+id/bnt_Week4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strock_noti4"
            android:textColor="@color/white"
            android:fontFamily="@font/comicz"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 4"/>

        <TextView
            android:id="@+id/bnt_Week5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/comicz"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/strock_noti5"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 5"/>
    </LinearLayout>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="3dp"
        android:layout_below="@+id/liner"
        android:verticalSpacing="7dp"
        android:stretchMode="columnWidth"/>


    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="25dp"
        android:text="no data"/>


</RelativeLayout>
