<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OtherInfo">

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/stroke_btn_emergency"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:fontFamily="@font/comicz"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Other permitted to pick up the child"/>
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 4 of 4"
                android:fontFamily="@font/listfont"
                android:textColor="#111"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="right"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/strock_edit2"
                android:orientation="vertical">

            <EditText
                android:id="@+id/nanyyName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:hint="Nanny's name"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>

                <EditText
                    android:id="@+id/MobileNo1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile No."
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/strock_edit2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/driverName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Driver's name"
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>

                <EditText
                    android:id="@+id/MobileNo2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile No."
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/strock_edit2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/otherName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Nanny's name"
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>
                <EditText
                    android:id="@+id/relationShip"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Relationship"
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>
                <EditText
                    android:id="@+id/MobileNo3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile No."
                    android:layout_below="@+id/sign"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/strock_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/stroke_btn1"
                    android:text="NEXT"/>
                <Button
                    android:id="@+id/textBack2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/stroke_btn2"
                    android:text="CANCEL"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>