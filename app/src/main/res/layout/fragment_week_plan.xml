<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="sweet.home.pinerria1.Fragment.SentMgs">
    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/stroke_btn_grad2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:textColor="#fff"
            android:text="Week Plans"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/relat"
        android:textStyle="bold"
        android:textColor="#111"
        android:background="#fff"
        android:gravity="center"
        android:text="21-mar-2018"/>

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/bnt_Week1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/comicz"
            android:textSize="18dp"
            android:background="@drawable/strock_noti1"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 1"/>

        <TextView
            android:id="@+id/bnt_Week2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/strock_noti2"
            android:fontFamily="@font/comicz"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 2"/>
        <TextView
            android:id="@+id/bnt_Week3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/strock_noti3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/comicz"
            android:gravity="center"
            android:text="Week 3"/>
        <TextView
            android:id="@+id/bnt_Week4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strock_noti4"
            android:textColor="@color/white"
            android:fontFamily="@font/comicz"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Week 4"/>

    </LinearLayout>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="3dp"
        android:layout_below="@+id/liner"
        android:verticalSpacing="7dp"
        android:stretchMode="columnWidth"/>

