<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OtherInfo">

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/stroke_btn_emergency"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:textColor="@color/black"
            android:text="Emergency Conscent Form"/>
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/listfont"
                android:layout_marginTop="10dp"
                android:textColor="#111"
                android:text="I understand that no emergency treatment will be given without parental consent. Since informed conscent must be given at the time of incident. I understand that i must l leave numbers when I or my spouse or a responsible adult designated by me may be reached daily    "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/listfont"
                android:layout_marginTop="15dp"
                android:text="1.The school will be connect parents/guardian as follows"
                android:textColor="#111"/>

            <EditText
                android:id="@+id/motherMob"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Mother can be reached (Mobile)*"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:background="@drawable/strock_emer"/>
            

            <EditText
                android:id="@+id/fatherMob"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Father can be reached (Mobile)*"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:background="@drawable/strock_emer"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/listfont"
                android:layout_marginTop="15dp"
                android:text="2 If Parents/guardian an not be reached, school will contact these emergency perspns."
                android:textColor="#111"/>
            <EditText
                android:id="@+id/person1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Person 1 Name"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_emer"/>


            <EditText
                android:id="@+id/personMob"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Person 1 Phone"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:background="@drawable/strock_emer"/>


            <EditText
                android:id="@+id/personRelation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Person 1 Relationship"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_emer"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/stroke_btn1"
                    android:text="NEXT"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/stroke_btn2"
                    android:text="CANCEL"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>