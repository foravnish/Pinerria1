<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OtherInfo">

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/stroke_btn_emer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:textColor="#fff"
            android:text="Emergency Conscent Form"/>
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

<requestFocus/>


            <EditText
                android:id="@+id/person2"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginTop="20dp"
                android:hint="Person 2 Name"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_emer"/>


            <EditText
                android:id="@+id/personMob2"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginTop="10dp"
                android:hint="Person 2 Phone"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:background="@drawable/strock_emer"/>


            <EditText
                android:id="@+id/personRelation2"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginTop="10dp"
                android:hint="Person 2 Relationship"
                android:layout_below="@+id/sign"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_emer"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/listfont"
                android:layout_marginTop="20dp"
                android:textColor="#111"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="*School will be arrange emergency transporttion to the nearest emergency medical facility. If necessary, my child will be transported an ambulance or other such vehicle when necessary. "/>


            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="I have read Home Sweet Preschool terms and accept the terms and condition started here in."/>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/stroke_btn1"
                android:text="SUBMIT THE APPLICATION FORM"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>