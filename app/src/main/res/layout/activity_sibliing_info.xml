<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SibliingInfo">


    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/stroke_btn_grad2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:textColor="@color/black"
            android:fontFamily="@font/comicz"
            android:textStyle="bold"
            android:text="Sibling's Information"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:hint="Name"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>

            <EditText
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>
            <EditText
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>
            <EditText
                android:id="@+id/name4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>
            <EditText
                android:id="@+id/name5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/strock_edit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/spi1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/strock_edit"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
                <Spinner
                    android:id="@+id/age1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/postImageView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spi2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/strock_edit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
                <Spinner
                    android:id="@+id/age2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/postImageView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spi3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/strock_edit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
                <Spinner
                    android:id="@+id/age3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/postImageView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spi4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/strock_edit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
                <Spinner
                    android:id="@+id/age4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/postImageView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spi5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/strock_edit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">
                <Spinner
                    android:id="@+id/age5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/postImageView" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:background="@drawable/stroke_btn1"
                android:text="NEXT"/>
            <Button
                android:id="@+id/textBack2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:background="@drawable/stroke_btn2"
                android:text="CANCEL"/>


        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>